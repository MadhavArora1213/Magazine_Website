# Backend API Configuration
VITE_API_URL=http://localhost:5000

# Weather API Configuration
# Get your free API key from: https://www.weatherapi.com/my/
VITE_WEATHERAPI_KEY=your_weatherapi_key_here
VITE_WEATHER_API_BACKUP_URL=https://api.open-meteo.com/v1/forecast

# Stock Market API Configuration
# Get your free API key from: https://www.alphavantage.co/
VITE_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# JWT Configuration (for backend)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=15m

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=magazine_website
DB_USER=root
DB_PASSWORD=your_database_password_here

# Email Configuration (for newsletter)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password_here

# Social Media API Keys (optional)
FACEBOOK_APP_ID=your_facebook_app_id_here
TWITTER_API_KEY=your_twitter_api_key_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# Analytics Configuration (optional)
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Development Configuration
NODE_ENV=development
PORT=5000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Cloud Storage Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name_here

# Payment Gateway Configuration (optional)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here